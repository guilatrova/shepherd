{
  "name": "@nerdwallet/shepherd",
  "version": "1.1.0",
  "description": "A utility for applying code changes across many repositories",
  "keywords": [
    "codemod",
    "codemods",
    "migration"
  ],
  "homepage": "https://github.com/NerdWalletOSS/shepherd#readme",
  "bugs": {
    "url": "https://github.com/NerdWalletOSS/shepherd/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NerdWalletOSS/shepherd.git"
  },
  "license": "Apache-2.0",
  "author": "Nathan Walters",
  "bin": {
    "shepherd": "./lib/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "npm run build -- --watch",
    "fix-lint": "npm run lint -- --fix",
    "lint": "tslint -p . -c tslint.json 'src/**/*.ts'",
    "prepublishOnly": "npm run test && npm run build",
    "test": "jest --coverage src/"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "@octokit/rest": "^15.9.4",
    "@types/js-yaml": "^3.11.2",
    "chalk": "^2.4.1",
    "child-process-promise": "^2.2.1",
    "commander": "^2.16.0",
    "fs-extra": "^6.0.1",
    "fs-extra-promise": "^1.0.1",
    "joi": "^13.4.0",
    "js-yaml": "^3.12.0",
    "lodash": "^4.17.10",
    "log-symbols": "^2.2.0",
    "netrc": "^0.1.4",
    "ora": "^2.1.0",
    "preferences": "^1.0.2",
    "simple-git": "^1.96.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/fs-extra-promise": "^1.0.7",
    "@types/jest": "^23.3.0",
    "@types/joi": "^13.4.0",
    "@types/lodash": "^4.14.112",
    "@types/log-symbols": "^2.0.0",
    "@types/node": "^10.5.2",
    "@types/ora": "^1.3.4",
    "jest": "^23.4.1",
    "jest-plugin-fs": "^2.9.0",
    "merge": "^1.2.1",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
